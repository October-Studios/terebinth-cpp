export module version;

import <string>;

const std::string TEREBINTH_VERSION_MAJOR = "@TEREBINTH_VERSION_MAJOR@";
const std::string TEREBINTH_VERSION_MINOR = "@TEREBINTH_VERSION_MINOR@";
const std::string TEREBINTH_VERSION_PATCH = "@TEREBINTH_VERSION_PATCH@";

export
class Version {
 public:
  static int Major() {
    return std::stoi(TEREBINTH_VERSION_MAJOR);
  }
  static int Minor() {
    return std::stoi(TEREBINTH_VERSION_MINOR);
  }
  static int Patch() {
    return std::stoi(TEREBINTH_VERSION_PATCH);
  }
};

